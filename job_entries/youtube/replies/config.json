{
  "dataset":"replies",
  "input": {
    "format": "csv",
    "path": "s3a://lakehouse/path/to/data/",
    "options": {
      "header": "true",
      "inferSchema": "true",
      "compression": "gzip",
      "delimiter": ","
    },
    "cache": true,
    "data_persistence": "MEMORY_AND_DISK"
  },
  "transformations": [
    {
      "name": "filter_rows",
      "params": {
        "condition": "comment_id IS NOT NULL AND comment_thread_id IS NOT NULL"
      },
      "target": "input_df"
    },
    {
      "name": "cast_columns",
      "params": {
        "type_mapping": {
          "like_count": "integer",
          "published_at": "timestamp",
          "updated_at": "timestamp"
        }
      },
      "target": "input_df"
    },
    {
      "name": "rename_columns",
      "params": {
        "mapping": {
          "text_display": "reply_text",
          "like_count": "reply_likes"
        }
      },
      "target": "input_df"
    },
    {
      "name": "extract_unique_entities",
      "params": {
        "entity_columns": ["author_name"],
        "id_column": "author_id",
        "drop_original_columns": true
      },
      "target": "input_df",
      "output_names": ["replies_df", "authors_df"],
      "multi_output": true,
      "show_sample": true
    },
    {
      "name": "add_columns",
      "params": {
        "columns": {
          "year": "year(published_at)",
          "month": "month(published_at)"
        }
      },
      "target": "replies_df",
      "show_sample": true
    },
    {
      "name": "sort_dataframe",
      "params": {
        "columns": ["published_at"],
        "ascending": true
      },
      "target": "replies_df",
      "show_sample": true
    }
  ],
  "output": [
    {
      "dataframe": "replies_df",
      "format": "parquet",
      "path": "s3a://lakehouse/youtube/golden/replies/current",
      "mode": "overwrite",
      "partition_by": ["year", "month"],
      "store_type": "SCD4",
      "primary_key": ["comment_id"],
      "history_path": "s3a://lakehouse/youtube/golden/replies/history",
      "tracking_columns": ["reply_text", "reply_likes"]
    },
    {
      "dataframe": "authors_df",
      "format": "parquet",
      "path": "s3a://lakehouse/youtube/golden/authors",
      "mode": "overwrite",
      "partition_by": [],
      "store_type": "SCD1",
      "primary_key": ["author_id"]
    }
  ]
}

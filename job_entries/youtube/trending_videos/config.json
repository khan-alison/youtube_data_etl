{
  "dataset": "trending_videos",
  "input": {
    "format": "csv",
    "path": "s3a://lakehouse/path/to/data/",
    "options": {
      "header": "true",
      "inferSchema": "true",
      "compression": "gzip",
      "delimiter": ","
    },
    "cache": true,
    "data_persistence": "MEMORY_AND_DISK"
  },
  "transformations": [
    {
      "name": "split_column_to_rows",
      "params": { "column": "tags", "delimiter": "," },
      "target": "input_df",
      "show_sample": true
    },
    {
      "name": "extract_df",
      "params": {
        "split_column": "tags",
        "id_columns": ["video_id"],
        "dedup_columns": ["video_id"]
      },
      "output_names": ["metadata_df", "tags_df"],
      "multi_output": true,
      "show_sample": true
    },
    {
      "name": "extract_unique_entities",
      "params": {
        "entity_columns": ["channel_id", "channel_title"],
        "id_column": "channel_id",
        "drop_original_columns": true
      },
      "target": "metadata_df",
      "output_names": ["metadata_df", "channels_basic_information_df"],
      "multi_output": true,
      "show_sample": true
    },
    {
      "name": "cast_columns",
      "params": {
        "type_mapping": {
          "view_count": "long",
          "like_count": "long",
          "comment_count": "long",
          "published_at": "timestamp"
        }
      },
      "target": "metadata_df",
      "show_sample": true
    },
    {
      "name": "rename_columns",
      "params": {
        "mapping": {
          "view_count": "views",
          "like_count": "likes",
          "comment_count": "comments"
        }
      },
      "target": "metadata_df",
      "show_sample": true
    },
    {
      "name": "add_columns",
      "params": {
        "columns": {
          "year": "year(published_at)"
        }
      },
      "target": "metadata_df",
      "show_sample": true
    },
    {
      "name": "add_columns",
      "params": {
        "columns": {
          "engagement_rate": "likes / views * 100"
        }
      },
      "target": "metadata_df",
      "show_sample": true
    },
    {
      "name": "sort_dataframe",
      "params": { "columns": ["views"], "ascending": false },
      "target": "metadata_df",
      "show_sample": true
    }
  ],
  "output": [
    {
      "dataframe": "metadata_df",
      "format": "parquet",
      "path": "s3a://lakehouse/youtube/golden/trending_videos/current",
      "history_path": "s3a://lakehouse/youtube/golden/trending_videos/history",
      "mode": "overwrite",
      "partition_by": ["category_id"],
      "store_type": "SCD4",
      "primary_key": ["video_id"],
      "tracking_columns": ["views", "likes", "comments"]
    },
    {
      "dataframe": "channels_basic_information_df",
      "format": "parquet",
      "path": "s3a://lakehouse/youtube/golden/channels_basic_information_df",
      "mode": "overwrite",
      "partition_by": [],
      "store_type": "SCD1",
      "primary_key": ["channel_id"]
    },
    {
      "dataframe": "tags_df",
      "format": "parquet",
      "path": "s3a://lakehouse/youtube/golden/tags",
      "mode": "overwrite",
      "partition_by": [],
      "store_type": "SCD1",
      "primary_key": ["video_id", "tag"]
    }
  ]
}
